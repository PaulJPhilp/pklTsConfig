module TsConfig.Default

import "./TsConfig.pkl"

config: TsConfig.TsConfig = new {
  useBase = true
  useStrict = true
  useStrictest = false
  useDom = true
  useMonorepo = false
  useLibrary = false
  useTranspiling = true
}

output {
  files {
    ["./totallytsconfig.json"] {
      text = "{" + TsConfig.renderTsConfig(config).dropLast(1) + "\n}"
    }
  }
}